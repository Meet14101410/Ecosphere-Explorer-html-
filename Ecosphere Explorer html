<!-- popup -->
<div class="popup" id="popup">
  <div class="card" id="card">
    <h2 id="bname">Biome</h2>
    <p id="bfact" style="line-height:1.35">Fact goes here.</p>
    <button class="btn" id="collect">Explore & Collect (+10)</button>
  </div>
</div>

<script>
  const scoreEl = document.getElementById('score');
  const popup = document.getElementById('popup');
  const bname = document.getElementById('bname');
  const bfact = document.getElementById('bfact');
  const collect = document.getElementById('collect');
  let score = 0;
  let current = null;
  document.querySelectorAll('.biome').forEach(b => {
    b.addEventListener('click', () => {
      current = b;
      bname.textContent = b.dataset.name;
      bfact.textContent = b.dataset.fact;
      popup.classList.add('active');
    });
  });

  collect.addEventListener('click', () => {
    if (!current) return;
    const gained = 10;
    score += gained;
    scoreEl.textContent = score;
    // visual feedback: briefly pulse the biome
    current.animate([{ transform: 'scale(1)' }, { transform: 'scale(1.08)' }, { transform: 'scale(1)' }], { duration: 350 });
    popup.classList.remove('active');
    current = null;
  });

  // close on background click or escape
  popup.addEventListener('click', (e)=>{ if(e.target===popup) popup.classList.remove('active') });
  document.addEventListener('keydown', e=>{ if(e.key==='Escape') popup.classList.remove('active') });
</script>
